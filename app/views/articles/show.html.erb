<h3>
  <%= @article.title %>
</h3>
<p>
  <%= @article.text %>
</p>
<h5>
  <%= @article.created_at %>
  <%= link_to ' Редактировать', edit_article_path(@article) %> <br />
</h5>

<p>
  <%= form_for([@article, @article.comments.build]) do |f| %>
    <p>
      <%= f.label :автор %> <br />
      <%= f.text_field :author %>
    </p>
    <p>
      <%= f.label :комментарий %> <br />
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
</p>

<%= link_to 'Список всех постов', articles_path %><br />
