<div class="container">

  <h3>
    <%= @article.title %>
  </h3>

  <p>
    <%= @article.text %>
  </p>

  <h5>
    Написал: <%= @article.username %> |
    <%= @article.created_at %>
    <% if @article.username == current_user.username %>
      <%= link_to ' Редактировать', edit_article_path(@article) %> <br />
    <% end %>
  </h5>

  <hr />

  <h3>Комментарии</h3>

  <% @article.comments.each do |item| %>
    <p>
      <i><%= item.author %>:</i>
      <%=item.body%>
    </p>
  <% end %>

  <hr />
  <h3>Новый комментарий</h3>

  <p>
    <%= form_for([@article, @article.comments.build]) do |f| %>
      <!-- <p>
        <%= f.label :автор %> <br />
        <%= f.text_field :author %>
      </p> -->
      <p>
        <!-- <%= f.label :комментарий %> <br /> -->
        <%= f.text_area :body, class: "form-control", style: "width: 400px" %>
      </p>
      <p>
        <%= f.submit "Сохранить", class: "btn btn-success" %>
      </p>
    <% end %>
  </p>

</div>
